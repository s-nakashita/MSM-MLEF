#!/bin/ksh
# check all config term and comment in utl/rsm_default.option

# --------------- directory ------------------
export USERID=` whoami `
export DISK=` cd ../../.. ; pwd `                 #working top directory
export DISKSYS=$DISK/sys
export DISKUSR=$DISK/usr
export WORKUSR=$DISK/usr/work
export WORK=` pwd `                            #working directory
export EXPN=` basename $WORK `                 #experimental subdirectory
if [ -s /ptmp ]; then
   export TEMP=/ptmp/${USERID}/$EXPN         #output top directory
else
#   export TEMP=/tmp/${USERID}/$EXPN          #output top directory
   export TEMP=$WORKUSR/$EXPN          #output top directory
fi
export GLOBAL=${GLOBAL:-GFS}
export RUNDIR0=$TEMP
export BASEDIR0=$WORKUSR/rsm2rsm27_da
export IRES=9

# --------------- compile options ----------------
# machine dependent
# compile options for ibm_xlf, mac_intel, mac_absoft, mac_xlf, 
# linux_pgi, linux_intel, linux_gfortran
export MACHINE=freebsd_gfortran
export IBMSP=no 
export DCRFT=no
export FFT99M=no
export RFFTMLT=yes

# massively parallel procesing options
export MARCH=mpi
export LAMMPI=no
export MPICH=yes
export KINDMPI=4
export NCOL=6
export NROW=4
export NODES=32   
export MP=yes
export THREAD=no 

# model parameter

# compile model option
export NEST=C2R   # G2R C2R P2R N2R
export NONHYD=yes
export INTDTB=yes           # internal evolved base field T
export RAS=no
export SAS=yes
export NCLDB=1
export NCLD=1
export GTOPO30=yes
export CHGTLEV=no              # top level damping
export BGF=3                        # CDELX ~= BGF * RDELX
export MBC=yes 
export LBC=no 

# compile exec option
export RMTN=yes
export RINP=yes
export FCST=yes

# --------------- run option --------------------
export CYCLESTART=4
export CYCLEMAX=7
export DASTART=2
export ENDHOUR=6 # cycle interval
export PRTHOUR=1
#export PSEC=60   # output interval in seconds (debug)
#export IOUTNHR=0 # 1: output interval units is hours
export INCBASE=3
export INCHOUR=3
export TIMESTEP=30
export IMDLPHY=1
export CLIM=0
export RSFC_MERGE=yes
export POSTTYPE=sync
export RUNRMTN=yes
export RUNRINP=yes
export RUNFCST=yes
#export RUNFCST=no # debug

# Ensemble size
export MEMBER=10
# BGM option for base
export TETYPE=dry
export SCL=
export QADJ=yes
head=bv${TETYPE}${SCL}${BP}
#if [ do$QADJ = doyes ];then #q adjustment
#  head=${head}_qadj
#fi #q adjustment
export HEAD=$head
# DA option
export SINGLEOBS=F
export DA_SINGLE_LATS=28.0
export DA_SINGLE_LATN=32.0
export DA_SINGLE_LONW=125.0
export DA_SINGLE_LONE=131.0
export DA_FIXED_LEVEL=F
export NISEP=5
export NJSEP=2
export IGHOST=1
export JGHOST=1
export LOBSMIN=-60
export ROBSMIN=60
export SELOBS=all
export PREP=_preprh
export DA_MEAN=F
export DA_TL=F
export DA_SCL_MEM=T
export MAXITER=1
export HLOC=300 #km
export VLOC=3   #*0.1ln p
export MINFL=0 #%
export RTPP=90 #%
export RTPS=0 #%
export RELAX_SPREAD_OUT=T
export Q_UPDATE_TOP=20000.0 #Pa
export DA_SAVE_INFO=T
head2=da${PREP}
if [ $SINGLEOBS = T ];then
  head2=${head2}.single
fi
if [ ${SELOBS} != all ];then
  head2=${head2}.${SELOBS}
fi
if [ $DA_FIXED_LEVEL = T ];then
  head2=${head2}.fixed
fi
if [ $DA_SCL_MEM = T ];then
  head2=${head2}.scl
fi
DA_INFL=
if [ $MINFL -gt 0 ];then
  DA_INFL=mi${MINFL}.
fi
if [ $RTPP -gt 0 ];then
  DA_INFL=${DA_INFL}rp${RTPP}.
fi
if [ $RTPS -gt 0 ];then
  DA_INFL=${DA_INFL}rs${RTPS}.
fi
head2=${head2}.iter${MAXITER}.l${HLOC}.v${VLOC}.${DA_INFL}
export HEAD2=$head2

#### rsmlocation

# d02 domain 110E-150E 16N-46N
export  IGRD=384
export  JGRD=324
export  LEVR=42
export  RPROJ=0.
export  RTRUTH=45.0
export  RORIENT=140.0
export  RDELX=9000.
export  RDELY=9300.
export  RCENLAT=35.0
export  RCENLON=130.0
export  RLFTGRD=183.0
export  RBTMGRD=190.0
# d01 domain 70E-170W 22S-65N
export  CIGRD=324
export  CJGRD=288
export  LEVS=42
export  CPROJ=0.
export  CTRUTH=45.0
export  CORIENT=120.0
export  CDELX=27000.
export  CDELY=27000.
export  CCENLAT=23.5
export  CCENLON=120.0
export  CLFTGRD=133.
export  CBTMGRD=121.

#
# load default configure file
. $DISKSYS/opt/rsm_default.option

# compile option
. $DISKSYS/opt/compile.option

