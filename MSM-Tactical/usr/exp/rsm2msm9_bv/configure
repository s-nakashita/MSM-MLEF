export IMDLPHY=1                # 1: run model physics, 0: off
export CLIM=0
export RSFC_MERGE=yes
export POSTTYPE=sync
export RUNRMTN=yes
export RUNRINP=yes
export RUNFCST=yes

#### rsmlocation

